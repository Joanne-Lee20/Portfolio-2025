---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Tag from "../components/Tag.astro";
---

<html lang="en">
  <head>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-..."
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="https://use.typekit.net/swa0lbf.css" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  </head>
  <body>
    <Header />

    <main>
      <div class="row flex-column flex-md-row gx-5" id="card">
        <div class="col-md-4">
          <img src="/self.png" />
          <div class="description">
            <h3>Joanne Lee</h3>
            <a
              href="https://www.linkedin.com/in/joanneynlee/"
              target="_blank"
              rel="noopener noreferrer"
              ><button>
                <p>
                  <img
                    src="/nav/linkedin.svg"
                    alt="LinkedIn logo"
                    width="25"
                    height="25"
                  />
                  joanneynlee
                </p>
              </button></a
            >
            <a href="https://github.com/Joanne-Lee20" target="_blank">
              <button>
                <p>
                  <img
                    src="/nav/github.svg"
                    width="25"
                    height="25"
                  />Joanne-Lee20
                </p>
              </button></a
            >
            <button><p>joanneynlee@gmail.com</p></button>
          </div>
        </div>
        <div class="col-md-8">
          <h3>Education</h3>
          <hr />
          <p>
            <ul>
              <li>University of Maryland, College Park (UMD)</li>
              <li>Computer Science & Immersive Media Design (dual degree)</li>
              <li>Incoming 3rd-year student</li>
              <li>
                <b>Programs:</b> UMD Honors College (Design Cultures and Creativity
                Living Learning Program), QUEST Honors Program
              </li>
              <li>
                <b>Academic Awards:</b> National Merit Scholarship Finalist, UMD
                Dean's Scholarship recipient, Dean's List (3 semesters), AP Scholar
                with Distinction
              </li>
            </ul>
          </p>
          <h3>Interests</h3>
          <hr />
          <p>
            <ul>
              <li>Creating digital art and animations</li>
              <li>Learning new songs on the piano</li>
              <li>
                Listening to video essays (usually on books, movies, and video
                games)
              </li>
              <li>Playing badminton</li>
            </ul>
          </p>
        </div>
      </div>
      <Footer />
    </main>
  </body>
</html>

<script>
  window.addEventListener("scroll", () => {
    const body = document.querySelector("body");
    if (!body) return;
    if (window.scrollY > 100) {
      body.classList.add("scrolled");
    } else {
      body.classList.remove("scrolled");
    }
  });
</script>

<style>
  button {
    width: 100%;
    padding: 0.5rem;
    border-radius: 5px;
    margin: 0.4rem 0;
  }
  button img {
    margin-right: 0.5rem;
    filter: invert(1);
    transition: filter 0.3s ease;
  }
  button p {
    margin: 0;
    font-size: 13px;
  }
  button:hover img {
    filter: invert(0);
  }
  .description {
    margin: 0.5rem 0;
    text-align: center;
  }
  #card {
    padding: 2rem;
    border: 2px solid var(--black);
    border-radius: 0.5rem;
    box-shadow: 5px 5px 0px var(--black);
  }
  h1 {
    text-align: center;
  }
  .img-wrapper {
    width: 100%;
    aspect-ratio: 1.5 / 1;
    position: relative;
    overflow: hidden;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .img-wrapper img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    transition:
      filter 0.3s ease,
      opacity 0.3s ease;
  }

  .img-wrapper:hover img {
    filter: blur(3px);
    opacity: 0.2;
  }

  .title {
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
    display: flex;
    justify-content: center;
    flex-direction: column;
    opacity: 0%;
    transition: opacity 0.6s;
  }

  .img-wrapper:hover .title {
    opacity: 100%;
  }

  .title > * {
    transform: translateY(25px);
    transition: transform 0.6s ease;
  }

  .img-wrapper:hover .title > * {
    transform: translateY(0px);
  }

  p {
    font-size: 15px;
  }

  ul {
    font-family: "Overpass";
    font-size: 15px;
    list-style-type: disc;
  }
  a {
    text-decoration: none;
  }
  @media (max-width: 720px) {
    #card {
      padding: 1rem;
    }
    .description {
      text-align: center;
      margin-bottom: 1.5rem;
    }
    .description h3 {
      font-size: 60px;
    }
    button {
      text-align: center;
    }
  }
</style>
