---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Tag from "../components/Tag.astro";
---

<html lang="en">
  <head>
    <link rel="icon" href="/nav/toast.svg" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-..."
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="https://use.typekit.net/swa0lbf.css" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  </head>
  <body>
    <Header />

    <main class="fade-in">
      <div class="row flex-column flex-md-row gx-5" id="card">
        <div class="col-md-4">
          <img src="/self.png" />
          <div class="description">
            <h3>Joanne Lee</h3>
            <p>
              is a software engineer who cares about crafting impactful digital
              experiences at the intersection of technology and design.
              Currently seeking new opportunities to learn and grow; feel free
              to reach out if you'd like to connect!
            </p>
            <a
              href="https://www.linkedin.com/in/joanneynlee/"
              target="_blank"
              rel="noopener noreferrer"
              ><button>
                <p>
                  <img
                    src="/nav/linkedin.svg"
                    alt="LinkedIn logo"
                    width="25"
                    height="25"
                  />
                  LinkedIn: Joanne Lee
                </p>
              </button></a
            >
            <a href="https://github.com/Joanne-Lee20" target="_blank">
              <button>
                <p>
                  <img src="/nav/github.svg" width="25" height="25" />GitHub:
                  Joanne-Lee20
                </p>
              </button></a
            >
            <button
              ><p>
                <img
                  src="/nav/mail.svg"
                  width="25"
                  height="25"
                />joanneynlee@gmail.com
              </p></button
            >
          </div>
        </div>
        <div class="col-md-8">
          <h4>Education</h4>
          <hr />
          <p>
            <ul>
              <li>Undergrad. at the University of Maryland, College Park</li>
              <li>
                <b>Majors:</b> Computer Science & Immersive Media Design
              </li>
              <li><b>Expected Graduation:</b> May 2027</li>
              <li>
                <b>Programs:</b> UMD Honors College (Design Cultures and Creativity
                Living Learning Program), QUEST Honors Program
              </li>
              <li>
                <b>Awards:</b> National Merit Scholarship Finalist, UMD Dean's Scholarship
                recipient, Dean's List
              </li>
            </ul>
          </p>
          <h4>Skills</h4>
          <hr />
          <div class="stats">
            <div>
              <p>
                <b>Frontend Development</b> (React, Astro, Tailwind)
              </p><progress value="95" max="100">95%</progress>
            </div>

            <div>
              <p><b>Web Languages</b> (HTML, CSS, JavaScript)</p><progress
                value="95"
                max="100">95%</progress
              >
            </div>

            <div>
              <p>
                <b>Backend & APIs</b> (Node.js, Express, .NET)
              </p><progress value="60" max="100">60%</progress>
            </div>

            <div>
              <p>
                <b>Data & Analysis</b> (Python, Pandas, scikit-learn)
              </p><progress value="70" max="100">70%</progress>
            </div>
          </div>
          <h4>Inventory</h4>
          <hr />
          <div class="inventory">
            <ul>
              <li>
                <img src="/inventory/book.svg" />
                <div class="item-desc"><b>Sci-fi Books</b></div>
              </li>
              <li>
                <img src="/inventory/tools.svg" /><div class="item-desc">
                  <b>Art Supplies</b>
                </div>
              </li>
              <li>
                <img src="/inventory/game.svg" /><div class="item-desc">
                  <b>Retro Games</b>
                </div>
              </li>
              <li>
                <img src="/inventory/sushi.svg" /><div class="item-desc">
                  <b>Asian Food</b>
                </div>
              </li>
            </ul>
          </div>
        </div>
      </div>
      <Footer />
    </main>
  </body>
</html>

<script>
  window.addEventListener("scroll", () => {
    const body = document.querySelector("body");
    if (!body) return;
    if (window.scrollY > 100) {
      body.classList.add("scrolled");
    } else {
      body.classList.remove("scrolled");
    }
  });
</script>

<style>
  .stats {
    width: 100%;
    margin-bottom: 1rem;
  }
  .stats div {
    display: flex;
    flex-direction: column;
    gap: 0rem; /* tighter spacing between p and progress */
    margin-bottom: 0.5rem; /* space between stat blocks */
  }
  .stats p {
    margin: 0;
  }
  progress {
    border: 2px solid var(--black);
    height: 1rem;
    width: 100%;
    border-radius: 5px;
  }
  progress::-webkit-progress-bar {
    background-color: var(--white);
  }
  progress::-webkit-progress-value {
    background-color: var(--black);
  }

  hr {
    margin-top: 0.25rem;
  }
  button {
    width: 100%;
    padding: 0.5rem;
    border-radius: 5px;
    margin: 0.4rem 0;
  }
  button img {
    margin-right: 0.5rem;
    filter: invert(1);
    transition: filter 0.3s ease;
  }
  button p {
    margin: auto;
    font-size: 12px;
  }
  button:hover img {
    filter: invert(0);
  }
  .description {
    margin: 0.5rem 0;
    text-align: left;
  }

  .inventory {
    font-size: 0.8em;
    background-color: var(--white);
  }
  .inventory ul {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-wrap: wrap;
    padding: 0;
    margin: 0;
  }
  .inventory li {
    display: inline-block;
    margin: 1rem;
    align-items: center;
    text-align: center;
  }
  .inventory img {
    width: 3em;
    transition: transform 0.2s ease-in-out;
  }
  .item-desc {
    margin-top: 1rem;
    transition: opacity 0.3s ease;
    pointer-events: none;
  }
  .inventory li:hover img {
    transform: scale(1.25);
    cursor: pointer;
  }
  #card {
    padding: 2rem;
    border: 2px solid var(--black);
    border-radius: 10px;
    box-shadow: 5px 5px 0px var(--black);
  }
  h1 {
    text-align: center;
  }
  .img-wrapper {
    width: 100%;
    aspect-ratio: 1.5 / 1;
    position: relative;
    overflow: hidden;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .img-wrapper img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    transition:
      filter 0.3s ease,
      opacity 0.3s ease;
  }

  .img-wrapper:hover img {
    filter: blur(3px);
    opacity: 0.2;
  }

  .img-wrapper:hover .title {
    opacity: 100%;
  }

  .img-wrapper:hover .title > * {
    transform: translateY(0px);
  }

  p {
    font-size: 15px;
  }

  ul {
    font-family: "Overpass";
    font-size: 15px;
    list-style-type: square;
  }
  a {
    text-decoration: none;
  }
  @media (max-width: 720px) {
    #card {
      border: none;
      box-shadow: none;
      padding: 0rem;
    }
    .description {
      text-align: center;
      margin-bottom: 1.5rem;
    }
    .description h3 {
      font-size: 50px;
    }
    button {
      text-align: center;
    }
  }
</style>
